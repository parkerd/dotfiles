email = pdebardelaben@gmail.com

[core]
excludesfile = /home/pdebardelaben/.gitignore

[color]
ui = true
diff = auto
stats = auto
branch = auto
interactive = auto

[alias]
aa = add --all
br = branch
ca = commit --amend
ci = commit
co = !git stash -u >/dev/null && git checkout $@ && git stash list && echo >/dev/null
df = !git --no-pager diff head
fe = fetch
in = !git fetch && git lg master..origin/master
lg = !git log --pretty=format:'%h - %an, %ar: %s' --reverse -10 | cat
mg = merge
ms = merge --squash
out = !git fetch && git lg origin/master..master
pop = stash pop
re = rebase
rollback = reset HEAD^
st = status
sub = submodule
up = pull

[push]
default = matching
